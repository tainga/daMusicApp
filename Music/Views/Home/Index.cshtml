@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1><span class="glyphicon glyphicon-music" aria-hidden="true"></span> The Music App</h1>
    <p class="lead">Enough said.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Albums</h3>
            </div>
            <div class="panel-body">
                <p>
                    Browse the complete catalog of albums. Includes full information about the artist, genre, and price.
                </p>
                <button onclick="location.href='@Url.Action("Index", "Albums")';return false;" class="btn btn-default btn-lg btn-block">Browse Albums</button>

            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Genres</h3>
            </div>
            <div class="panel-body">
                <p>See what music genres are available and find albums in your favorite genre.
                <p><button onclick="location.href='@Url.Action("Index", "Genres")';return false;" class="btn btn-default btn-lg btn-block">Browse by Genre</button></p>

            </div>
        </div>
        
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Artists</h3>
            </div>
            <div class="panel-body">
                <p>See what music genres are available and find albums in your favorite genre.</p>
                <p><button onclick="location.href='@Url.Action("Index", "Artists")';return false;" class="btn btn-default btn-lg btn-block">Browse by Artist</button></p>

            </div>
        </div>
        
    </div>
</div>